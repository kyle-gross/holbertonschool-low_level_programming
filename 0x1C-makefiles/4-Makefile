CC := gcc
SRC := main.c holberton.c
OBJ := $(SRC:c=o)
NAME := holberton
RM := rm
CFLAGS := -Wall -Werror -Wextra -pedantic

.PHONY: all $(NAME) clean oclean fclean re

.PHONY all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) -o $(NAME) $(OBJ)

clean:
	$(RM) -f *~ $(NAME)

oclean:
	$(RM) -f $(OBJ)

fclean: clean oclean

re: oclean all
