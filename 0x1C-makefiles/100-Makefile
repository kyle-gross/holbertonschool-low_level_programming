CC = gcc
SRC = main.c holberton.c
OBJ = $(SRC:c=o)
NAME = holberton
CFLAGS = -Wall -Werror -Wextra -pedantic -MD

.PHONY: all $(NAME) clean oclean fclean re

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) -o $(NAME) $(OBJ) $(DEPFLAGS)

clean:
	$(RM) -f *~ $(NAME)

oclean:
	$(RM) -f $(OBJ)

fclean: clean oclean

re: oclean all
